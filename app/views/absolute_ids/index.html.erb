<section class="absolute-ids">
  <% if current_user %>
    <div class="lux">
      <absolute-id-form
        action="<%= absolute_ids_path %>"
        next-location="<%= next_location %>"
        next-prefix="<%= next_prefix %>"
        next-code="<%= next_code %>"
        token="<%= current_user.token %>">
      </absolute-ids-form>
    </div>
  <% end %>

  <% if @absolute_ids.length > 0 %>
    <div class="absolute-ids-table lux">
      <absolute-id-table caption="Absolute Identifiers (AbIDs)"
                  :columns="[
                            { 'name': 'location', 'display_name': 'Location', 'align': 'left', 'sortable': true },
                            { 'name': 'value', 'display_name': 'Barcode', 'align': 'left', 'sortable': true },
                            { 'name': 'resource', 'display_name': 'ArchivesSpace Resource', 'align': 'left', 'sortable': false },
                            { 'name': 'updated_at', 'display_name': 'Last Updated', 'datatype': 'date', 'sortable': true },
                            ]"
                  :json-data="<%= @absolute_ids.to_json %>" />
    </div>
  <% else %>
    <h1>Absolute Identifiers (AbIDs)</h1>
  <% end %>

  <div class="absolute-ids-status lux">
    <% unless index_status.blank? %>
      <alert status="info" dismissible>
        <%= index_status %>
      </alert>
    <% end %>
  </div>
</section>
